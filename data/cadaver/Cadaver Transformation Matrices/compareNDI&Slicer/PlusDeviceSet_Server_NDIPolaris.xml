<PlusConfiguration version="2.1">

  <DataCollection StartupDelaySec="1.0" >
    <DeviceSet 
      Name="PlusServer: NDI Polaris tracker with passive markers" 
      Description="Broadcasting tool tracking data through OpenIGTLink
For NDI Polaris passive marker magnetic steering ROM files" />
    <Device
      Id="TrackerDevice"
      Type="PolarisTracker"
      ToolReferenceFrame="Tracker" >
      <DataSources>
	<DataSource Type="Tool" Id="AIT" RomFile="NdiToolDefinitions/AITnonmagnetic_2019-06-24.rom"  />
	<DataSource Type="Tool" Id="Cochlea" RomFile="NdiToolDefinitions/CochleaFixtureRef_2019-07-17.rom"  />
	<DataSource Type="Tool" Id="Omnimag" RomFile="NdiToolDefinitions/Omnimagnet_2019-06-25.rom"  />
	<DataSource Type="Tool" Id="Magsensor" RomFile="NdiToolDefinitions/magsensor_7-18-19.rom"  />
      </DataSources>
      <OutputChannels>
        <OutputChannel Id="TrackerStream" >
          <DataSource Id="AIT"/>
	  <DataSource Id="Cochlea"/>
	  <DataSource Id="Omnimag"/>
	  <DataSource Id="Magsensor"/>
        </OutputChannel>
      </OutputChannels>
    </Device>
    <Device
      Id="CaptureDevice"
      Type="VirtualCapture"
      EnableFileCompression="TRUE"
      EnableCapturingOnStart="TRUE" >
      <InputChannels>
        <InputChannel Id="TrackerStream" />
      </InputChannels>
    </Device>    
  </DataCollection>
  <PlusOpenIGTLinkServer 
    MaxNumberOfIgtlMessagesToSend="1"
    MaxTimeSpentWithProcessingMs="50"
    ListeningPort="18944"
    SendValidTransformsOnly="true"
    OutputChannelId="TrackerStream" >
    <DefaultClientInfo>
      <MessageTypes>
        <Message Type="TRANSFORM" />
      </MessageTypes>
      <TransformNames>
        <Transform Name="AITToTracker" />
	<Transform Name="CochleaToTracker" />
	<Transform Name="OmnimagToTracker" />
	<Transform Name="MagsensorToTracker" />
      </TransformNames>
    </DefaultClientInfo>
  </PlusOpenIGTLinkServer>

</PlusConfiguration>